{
  "name": "@izumisy/deps2changesets",
  "private": false,
  "version": "0.2.2",
  "description": "CLI tool to automatically generate changesets from dependency changes in Git commits",
  "type": "module",
  "main": "dist/cli.mjs",
  "bin": {
    "deps2changesets": "./dist/cli.mjs",
    "deps2cs": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "changesets",
    "dependabot",
    "dependencies",
    "monorepo",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@changesets/write": "^0.4.0",
    "@manypkg/get-packages": "^3.1.0",
    "consola": "^3.4.2",
    "gunshi": "^0.27.5",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "memfs": "^4.54.0",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": "24.x"
  }
}
